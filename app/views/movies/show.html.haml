%h2 Deatils about #{@movie.title}

%ul#details
  %li
    Rating:
    = @movie.rating
  %li
    Release on:
    = @movie.release_date.strftime("%B %d, %Y")
    
%h3 Description:
  
%p#description= @movie.description

%table#reviews
  %thead
    %th Reviewer
    %th Potatoes
    %th Edit
  %tbody
    - @movie.reviews.each do | review |
      %tr
        %td= review.moviegoer.name
        %td= review.potatoes
        %td= link_to 'Edit Review', edit_movie_review_path(@movie,review)

%div.link
  = link_to 'Edit info', edit_movie_path(@movie)
%div.link
  = link_to 'Add Review', new_movie_review_path(@movie)
%div.link
  = link_to 'Back to movie list', movies_path
%div.link
  = link_to 'Delete', movie_path(@movie), :method => :delete